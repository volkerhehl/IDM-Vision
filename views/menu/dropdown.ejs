<% if (menu) { %>
  <% let loc = typeof location === 'undefined' ? 'left' : location %>
  <% let classAdd = loc === 'right' ? ' dropdown-menu-right' : '' %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="<%= menu.id %>" aria-expanded="false"><%= name %><span class="caret"></span></a>
    <div class="dropdown-menu<%= classAdd %>">
      <% for (let el of menu.content) { %>
        <% if (el.type == 'divider') { %>
          <div class="dropdown-divider"></div>
        <% } else if (el.type == 'item') { %>
          <a class="dropdown-item<%= el.active ? '' : ' disabled' %>" href="<%= el.link %>"><%= el.name %></a>
        <% } %>
      <% } %>
    </div>
  </li>
<% } %>
